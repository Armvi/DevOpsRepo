{
  "id": null,
  "title": "Kanban Backend Metrics",
  "tags": [],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "title": "HTTP Requests",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "http_server_requests_seconds_count{job=\"kanban-app\"}",
          "legendFormat": "requests"
        }
      ]
    },
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_cpu_usage{job=\"kanban-app\"}",
          "legendFormat": "cpu"
        }
      ]
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=\"kanban-app\"}",
          "legendFormat": "memory"
        }
      ]
    }
  ]
}
